{
  "name": "LPS-Facilities",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "front-end",
    "tooling/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:libs": "turbo run build:libs",
    "dev": "turbo run dev",
    "test": "pnpm -F front-end test",
    "clean": "git clean -xdf node_modules",
    "db:gen": "pnpm -F db gen",
    "clean:outs": "turbo run clean:outs",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "lint:ws": "pnpm dlx sherif@latest -r unsync-similar-dependencies",
    "lint:ws:fix": "pnpm dlx sherif@latest --fix -r unsync-similar-dependencies",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "ui-add": "pnpm -F front-end ui-add"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@total-typescript/ts-reset": "^0.6.1",
    "@turbo/gen": "^2.1.3",
    "turbo": "^2.1.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@10.13.1"
}
